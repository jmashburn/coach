global
  maxconn 4096
  user    haproxy
  group   haproxy
  daemon

defaults
  mode    http
  option  httplog
  option  redispatch
  maxconn 2000
  timeout connect     5s
  timeout client     10s
  timeout server    600s
  timeout queue     600s

frontend stager
  bind <%= bind %>
<% containers.each do |c| -%>
  acl is_<%=c[:name]%> hdr_beg(host) -i <%=c[:name]%>.
  use_backend <%=c[:name]%> if is_<%=c[:name]%>
<% end -%>

<% containers.each do |c| %>
backend <%= c[:name] %>
  server server1 <%= c[:address] %> check maxconn 20
<% end %>